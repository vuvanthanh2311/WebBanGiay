<div class="signup" style="margin: auto; width:40%">
    <form class="form__signup" action="/admin/{{product._id}}?_method=PUT" method="POST" id="form__signup">
        <h1>Update Product</h1>
        <div class="form__group">
            <label for="name">name</label>
            <input type="text"  id="name" name="name" value="{{product.name}}">
        </div>
        <div class="form__group">
            <label for="image">image</label>
            <input type="text"  id="image" name="image" value="{{product.image}}">
        </div>
        <div class="form__group">
            <label for="price">price</label>
            <input type="number"  id="price" name="price" value="{{product.price}}">
        </div>
        <div class="form__group">
            <label for="type">type</label>
            <input type="text"  id="type" name="type" value="{{product.type}}">
        </div>
        <div class="form__group">
            <label for="description">description</label>
            <input type="text"  id="description" name="description" value="{{product.description}}">
        </div>
        <div class="form__group">
            <label for="size">size</label>
            <input type="number"  id="size" name="size" value="{{product.size}}">
        </div>
        <div class="form__group">
            <label for="number">number</label>
            <input type="number"  id="number" name="number" value="{{product.number}}">
        </div>
        <button class="form__submit">UPDATE</button>
    </form>
</div>