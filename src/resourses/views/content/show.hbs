<div class="container">
  <div class="mt-4">
      <div class="row">
        {{#each product}}
          <div class="col-sm-6 col-lg-4 mt-4 mb-4">
              <div class="card card-courses-item "  >
                <a href="/product/{{this.slug}}">
                  <img src="{{this.image}}" class="card-img-top" alt="..." style="height: 20rem;" >
                </a> 
                <div class="card-body">
                  <a href="/product/{{this.slug}}">
                    <h5 class="card-title text-overflow">{{this.name}}</h5>
                  </a>
                  <p id="formatPrice" class="card-text">{{this.price}}</p>
                  <a href="/product/{{this.slug}}" class="btn btn-primary">Buy now</a>
                </div>
              </div>
          </div>
        {{/each}}   
      </div>
  </div>
</div>

