<script>
const btnFilter = document.querySelectorAll(".btnFilter")
const productFilter = document.querySelectorAll(".productFilter")
const hideP = document.querySelector(".hideProduct")

btnFilter.forEach((item, index) => {

    const productF = productFilter[index]

    item.onclick = function() {
        hideP.style.display="none";

        const activeItem = document.querySelector(".btnFilter.active")
        const hiddenProduct = document.querySelector(".productFilter.show")

        if(hiddenProduct){
            hiddenProduct.classList.remove('show')   
        }
        productF.classList.add('show')
        
        if(activeItem){
            activeItem.classList.remove('active') 
        }
        this.classList.add('active')
        

    }
})
    const hideFilter =  document.querySelector(".hideFilter");
    const showFilter =  document.querySelector(".showFilter");
    const product__sidebar =  document.querySelector(".product__sidebar");  
    const product__container =  document.querySelector(".product__container");
    const sortDown =  document.querySelector(".sortDown");
    const sortUp =  document.querySelector(".sortUp");
    const dropdown =  document.querySelector(".dropdown");

    showFilter.style.display = "none";
    sortUp.style.display = "none";

    hideFilter.addEventListener("click",function(){
        showFilter.style.display = "block";
        hideFilter.style.display = "none";
        product__sidebar.style.display = "none";
        product__container.style.width = "100%";
    })
    showFilter.addEventListener("click",function(){
        showFilter.style.display = "none";
        hideFilter.style.display = "block";
        product__sidebar.style.display = "block";
        product__container.style.width = "80%";
    })
    sortDown.addEventListener("click",function(){
        sortUp.style.display = "block";
        sortDown.style.display = "none";
        dropdown.style.display = "block";
        
    })
    sortUp.addEventListener("click",function(){
        sortUp.style.display = "none";
        sortDown.style.display = "block";
        dropdown.style.display = "none";
        
    })
</script>
